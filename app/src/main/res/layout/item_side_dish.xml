<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/checkBoxSideDish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageViewSideDish"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/textViewSideDishName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="Tên đồ ăn phụ" />

            <TextView
                android:id="@+id/textViewSideDishPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:text="10.000 VNĐ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnMinusSideDish"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="-"
                android:textSize="14sp"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <TextView
                android:id="@+id/tvSideDishQuantity"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnPlusSideDish"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+"
                android:textSize="14sp"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>